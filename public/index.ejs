<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Site de Petites Annonces</title>
  <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
<div class="container">
  <h1>Petites Annonces</h1>
  <div class="search-container">
    <form method="GET" action="/">
      <input type="text" name="search" id="searchInput" value="<%= search %>" placeholder="Rechercher des annonces...">
      <button type="submit">Rechercher</button>
    </form>
  </div>
  <button onclick="document.getElementById('postForm').classList.toggle('hidden')">Poster une annonce</button>
  <div id="adsContainer">
    <% ads.forEach(ad => { %>
    <div>
      <h3><%= ad.email %></h3>
      <p><%= ad.description %></p>
    </div>
    <% }); %>
  </div>
  <div id="pagination">
    <% for (let i = 1; i <= totalPages; i++) { %>
    <form method="GET" action="/" style="display: inline;">
      <input type="hidden" name="page" value="<%= i %>">
      <input type="hidden" name="search" value="<%= search %>">
      <button type="submit" <%= i === page ? 'disabled' : '' %>><%= i %></button>
    </form>
    <% } %>
  </div>
  <div id="postForm" class="hidden">
    <h2>Poster une Annonce</h2>
    <form method="POST" action="/api/ads">
      <input type="email" name="email" id="email" placeholder="Votre email" required>
      <textarea name="description" id="description" placeholder="Description de l'annonce" required></textarea>
      <button type="submit">Poster</button>
    </form>
  </div>
</div>
</body>
</html>
